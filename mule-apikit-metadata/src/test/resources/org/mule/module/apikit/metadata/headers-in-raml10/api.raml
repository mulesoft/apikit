#%RAML 1.0
---
title: RAML 1.0 Headers
version: v1
baseUri: https://www.example.com/api/

/headers/mandatory:
    get:
        headers:
          stringHeader:
            type: string
            minLength: 2
            maxLength: 10
            enum: ["enum1", "enum2"]
            default: "enum1"
          numberHeader:
            type: number
            minimum: 10.10
            maximum: 20.20
            default: 15.15
          integerHeader:
            type: integer
            minimum: 10
            maximum: 20
            default: 15
          dateHeader:
            type: datetime
            default: "Sun, 06 Nov 1994 08:49:37 GMT"
          booleanHeader:
            type: boolean
            default: false
          fileHeader:
            type: file
          withoutType:

/headers/optional:
    get:
        headers:
          stringHeader:
            type: string
            required: false
          numberHeader:
            type: number
            required: false
          integerHeader:
            type: integer
            required: false
          dateHeader:
            type: datetime
            required: false
          booleanHeader:
            type: boolean
            required: false
          fileHeader:
            type: file
            required: false
          withoutType:
            required: false

/without/headers:
    get:
        headers:

/headers/array:
    get:
        headers:
          arrayOfStringHeader:
            type: string[]
          arrayOfNumberHeader:
            type: number[]
          arrayOfIntegerHeader:
            type: integer[]
          arrayOfDateHeader:
            type: datetime[]
          arrayOfBooleanHeader:
            type: boolean[]
          arrayOfFileHeader:
            type: file[]
